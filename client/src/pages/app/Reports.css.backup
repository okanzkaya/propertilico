/* Base Styles */
.page-wrapper {
    padding: 24px;
    min-height: 100vh;
    background-color: var(--background-default);
    color: var(--text-primary);
  }
  
  /* Card Styles */
  .report-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease-in-out;
  }
  
  .report-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-4);
  }
  
  /* Chart Container */
  .chart-container {
    height: 300px;
    width: 100%;
  }
  
  .detail-chart-container {
    height: 400px;
    width: 100%;
  }
  
  /* Search and Filter Section */
  .filters-container {
    margin-bottom: 24px;
  }
  
  .search-input {
    width: 100%;
  }
  
  /* Tags Display */
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    margin-bottom: 16px;
  }
  
  .tag-chip {
    margin-right: 4px;
    margin-bottom: 4px;
  }
  
  /* Dialog Styles */
  .dialog-title {
    position: relative;
    padding-right: 48px;
  }
  
  .close-button {
    position: absolute !important;
    right: 8px;
    top: 8px;
  }
  
  /* Table Styles */
  .data-table {
    margin-top: 20px;
  }
  
  /* Pagination */
  .pagination-container {
    display: flex;
    justify-content: center;
    margin-top: 24px;
  }
  
  /* Download Buttons */
  .download-button {
    text-decoration: none;
  }
  
  /* Responsive Adjustments */
  @media (max-width: 600px) {
    .page-wrapper {
      padding: 16px;
    }
    
    .chart-container,
    .detail-chart-container {
      height: 250px;
    }
  }
  
  /* Animation */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  .fade-in {
    animation: fadeIn 0.3s ease-in;
  }