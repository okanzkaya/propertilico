.page-wrapper {
    padding: 24px;
    background-color: var(--background-default);
    min-height: 100vh;
  }
  
  /* Card Styles */
  .ticket-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    cursor: pointer;
    border-radius: 16px;
    overflow: hidden;
    background: linear-gradient(45deg, rgba(25, 118, 210, 0.05), rgba(156, 39, 176, 0.05));
  }
  
  .ticket-card:hover {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    transform: translateY(-5px);
  }
  
  .card-header {
    padding: 16px;
    background: linear-gradient(45deg, #1976d2 30%, #9c27b0 90%);
    color: white;
  }
  
  .card-title {
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .card-content {
    padding: 16px;
    flex-grow: 1;
  }
  
  .card-description {
    margin-bottom: 16px;
    height: 3em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .card-footer {
    padding: 16px;
    border-top: 1px solid rgba(0, 0, 0, 0.12);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  /* Status Chips */
  .status-chip {
    font-weight: bold;
    border-radius: 16px;
  }
  
  .status-chip-error {
    box-shadow: 0 0 8px rgba(244, 67, 54, 0.5);
  }
  
  .status-chip-warning {
    box-shadow: 0 0 8px rgba(255, 152, 0, 0.5);
  }
  
  .status-chip-success {
    box-shadow: 0 0 8px rgba(76, 175, 80, 0.5);
  }
  
  .status-chip-default {
    box-shadow: 0 0 8px rgba(158, 158, 158, 0.5);
  }
  
  /* Avatar and Icons */
  .assignee-avatar {
    width: 24px;
    height: 24px;
    margin-right: 8px;
    background-color: var(--primary-main);
  }
  
  .due-date-icon {
    margin-right: 4px;
  }
  
  .warning-icon {
    margin-left: 4px;
  }
  
  .expired-date {
    color: var(--error-main);
  }
  
  /* Search and Filters */
  .search-bar {
    border-radius: 20px;
  }
  
  .search-bar .MuiOutlinedInput-root {
    border-radius: 20px;
    background-color: rgba(255, 255, 255, 0.15);
  }
  
  .search-bar .MuiOutlinedInput-root:hover {
    background-color: rgba(255, 255, 255, 0.25);
  }
  
  .search-bar .MuiOutlinedInput-root fieldset {
    border-color: transparent;
  }
  
  .search-bar .MuiOutlinedInput-root:hover fieldset {
    border-color: transparent;
  }
  
  .search-bar .MuiOutlinedInput-root.Mui-focused fieldset {
    border-color: var(--primary-main);
  }
  
  /* Tabs */
  .custom-tabs {
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 16px;
    margin-bottom: 32px;
  }
  
  .custom-tab {
    min-width: auto;
    padding: 8px 16px;
    font-weight: 500;
  }
  
  .custom-tab.Mui-selected {
    background-color: rgba(25, 118, 210, 0.1);
    border-radius: 8px;
  }
  
  /* Dialog Styles */
  .dialog-view {
    padding: 24px;
  }
  
  .dialog-form {
    padding: 16px;
  }
  
  .dialog-delete {
    padding: 24px;
    text-align: center;
  }
  
  .note-input {
    margin-top: 16px;
  }
  
  .dialog-title {
    background: linear-gradient(45deg, var(--primary-main) 30%, var(--secondary-main) 90%);
    color: white;
    font-weight: bold;
  }
  
  .dialog-close-button {
    position: absolute;
    right: 8px;
    top: 8px;
    color: white;
  }
  
  /* List Styles */
  .notes-list {
    margin-top: 16px;
  }
  
  .note-item {
    background-color: rgba(255, 255, 255, 0.5);
    margin-bottom: 8px;
    border-radius: 8px;
    padding: 12px;
  }
  
  .note-timestamp {
    font-size: 0.875rem;
    color: rgba(0, 0, 0, 0.6);
  }
  
  .note-content {
    margin-top: 4px;
  }
  
  /* Loading State */
  .loading-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50vh;
  }
  
  /* Empty State */
  .empty-state {
    padding: 32px;
    text-align: center;
    border-radius: 16px;
  }
  
  /* Snackbar */
  .custom-snackbar {
    border-radius: 20px;
  }
  
  /* Buttons */
  .action-button {
    border-radius: 20px;
    text-transform: none;
  }
  
  .add-button {
    border-radius: 20px;
    margin-right: 8px;
  }
  
  /* Responsive Styles */
  @media (max-width: 600px) {
    .page-wrapper {
      padding: 16px;
    }
    
    .header-actions {
      flex-direction: column;
      align-items: stretch;
    }
    
    .search-filters {
      flex-direction: column;
      gap: 16px;
    }
    
    .filter-group {
      width: 100%;
    }
    
    .custom-tabs {
      margin-bottom: 24px;
    }
    
    .ticket-card {
      margin-bottom: 16px;
    }
  }
  
  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .fade-enter {
    animation: fadeIn 0.3s ease-out;
  }
  
  /* Custom Scrollbar */
  .custom-scrollbar::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 4px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
  
  /* Utility Classes */
  .flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .space-between {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .text-ellipsis {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .full-width {
    width: 100%;
  }
  
  .margin-bottom {
    margin-bottom: 16px;
  }
  
  /* CSS Variables */
  :root {
    --primary-main: #1976d2;
    --secondary-main: #9c27b0;
    --error-main: #f44336;
    --warning-main: #ff9800;
    --success-main: #4caf50;
    --background-default: #f5f5f5;
    --text-primary: rgba(0, 0, 0, 0.87);
    --text-secondary: rgba(0, 0, 0, 0.6);
  }