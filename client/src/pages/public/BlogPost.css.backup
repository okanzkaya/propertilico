/* Base container styles */
.post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  @media (max-width: 768px) {
    .post-container {
      padding: 1rem;
      margin: 0 1rem;
    }
  }
  
  /* Header and navigation */
  .header-image {
    width: 100%;
    height: 400px;
    border-radius: 8px 8px 0 0;
    margin-bottom: 2rem;
    overflow: hidden;
    position: relative;
  }
  
  .header-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }
  
  .header-image img.loaded {
    opacity: 1;
  }
  
  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #666;
    text-decoration: none;
    margin-bottom: 2rem;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .back-button:hover {
    background: #f5f5f5;
    color: #333;
  }
  
  /* Post title and metadata */
  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
  
  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }
  }
  
  .meta-data {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2rem;
    color: #666;
    font-size: 0.9rem;
  }
  
  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .meta-item svg {
    color: #888;
  }
  
  /* Tags */
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }
  
  .tag {
    background: #f0f0f0;
    color: #666;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .tag:hover {
    background: #1a1a1a;
    color: #fff;
  }
  
  /* Action buttons */
  .action-button-group {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .action-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
  }
  
  .action-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
  
  .action-button svg {
    font-size: 1.1rem;
  }
  
  /* Post content styles */
  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
    margin-bottom: 3rem;
  }
  
  .post-content h2 {
    font-size: 1.8rem;
    font-weight: 600;
    margin: 2rem 0 1rem;
    color: #1a1a1a;
  }
  
  .post-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 1.5rem 0 1rem;
    color: #1a1a1a;
  }
  
  .post-content p {
    margin-bottom: 1.5rem;
    max-width: 100%;
  }
  
  .post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }
  
  .post-content pre {
    max-width: 100%;
    overflow-x: auto;
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    margin: 1.5rem 0;
  }
  
  .post-content blockquote {
    border-left: 4px solid #1a1a1a;
    padding-left: 1rem;
    margin: 2rem 0;
    font-style: italic;
    color: #666;
  }
  
  .post-content a {
    color: #007bff;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }
  
  .post-content a:hover {
    border-bottom-color: #007bff;
  }
  
  /* Author section */
  .author-section {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: #f9f9f9;
    border-radius: 8px;
    margin: 3rem 0;
  }
  
  .author-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .author-info {
    flex: 1;
  }
  
  .author-name {
    margin: 0 0 0.5rem;
    font-size: 1.2rem;
    color: #1a1a1a;
  }
  
  .author-bio {
    margin: 0;
    color: #666;
    font-size: 0.9rem;
    line-height: 1.6;
  }
  
  /* Share section */
  .share-section {
    margin: 3rem 0;
  }
  
  .share-title {
    font-size: 1.2rem;
    color: #1a1a1a;
    margin-bottom: 1rem;
    text-align: center;
  }
  
  .share-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  /* Related posts */
  .related-posts {
    margin-top: 4rem;
  }
  
  .related-posts-title {
    font-size: 1.5rem;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
  }
  
  .related-posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .related-post-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    background: #f9f9f9;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .related-post-card:hover {
    transform: translateY(-5px);
  }
  
  /* Utility classes */
  .loading-spinner {
    border: 3px solid #f3f3f3;
    border-top: 3px solid #1a1a1a;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    animation: spin 1s linear infinite;
    margin: 2rem auto;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .error-message {
    background: #fff0f0;
    color: #d63031;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    margin: 2rem 0;
    font-size: 1rem;
  }
  
  .notification {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    padding: 1rem;
    background: #333;
    color: white;
    border-radius: 4px;
    z-index: 1000;
  }
  
  /* Table of contents */
  .table-of-contents {
    position: sticky;
    top: 2rem;
    margin-bottom: 2rem;
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 8px;
  }
  
  @media (max-width: 1200px) {
    .table-of-contents {
      display: none;
    }
  }
  
  .table-of-contents ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .table-of-contents li {
    margin-bottom: 0.5rem;
  }
  
  .table-of-contents a {
    color: #666;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .table-of-contents a:hover {
    color: #1a1a1a;
  }
  
  .table-of-contents a.active {
    color: #1a1a1a;
    font-weight: 600;
  }