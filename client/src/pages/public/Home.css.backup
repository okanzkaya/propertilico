/* Global Variables */
:root {
  --primary-color: #4f46e5;
  --primary-hover: #4338ca;
  --secondary-color: #06b6d4;
  --accent-color: #3b82f6;
  --text-primary: #1f2937;
  --text-secondary: #4b5563;
  --white: #ffffff;
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gradient-start: #4f46e5;
  --gradient-end: #06b6d4;
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
  --border-radius: 8px;
}

/* Container */
.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* Hero Section */
.hero-section {
  background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
  background-size: 400% 400%;
  animation: gradient 15s ease infinite;
  min-height: 100vh;
  color: var(--white);
  padding: 4rem 0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}

@keyframes gradient {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.hero-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 4rem;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
}

.hero-content {
  flex: 1;
  max-width: 600px;
  z-index: 1;
}

.heading {
  font-size: 3.5rem;
  font-weight: 800;
  margin-bottom: 1.5rem;
  line-height: 1.2;
  background: linear-gradient(to right, #ffffff, #e0e0e0);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.sub-heading {
  font-size: 1.25rem;
  line-height: 1.6;
  margin-bottom: 2rem;
  opacity: 0.9;
}

/* Grid Box */
.hero-grid {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

.grid-box {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: var(--border-radius);
  padding: 2rem;
  transition: all 0.3s ease;
  cursor: pointer;
}

.grid-box:hover {
  transform: translateY(-5px);
  background: rgba(255, 255, 255, 0.15);
}

.grid-icon-wrapper {
  background: rgba(255, 255, 255, 0.2);
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1rem;
}

.grid-icon {
  font-size: 1.8rem;
  color: var(--white);
}

.grid-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--white);
}

.grid-description {
  font-size: 0.9rem;
  opacity: 0.9;
  line-height: 1.4;
}

/* Benefit List */
.benefit-list {
  list-style: none;
  padding: 0;
  margin: 2rem 0;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
  font-size: 1.1rem;
  color: var(--white);
}

.benefit-item svg {
  margin-right: 0.75rem;
  color: var(--accent-color);
}

/* Feature Section */
.features-section {
  padding: 5rem 0;
  background: var(--white);
}

.feature-grid-new {
  display: flex;
  justify-content: center;
  gap: 2rem;
  flex-wrap: nowrap;
  padding: 0 5%;
  max-width: 1400px;
  margin: 0 auto;
}

.feature-card {
  flex: 1;
  min-width: 250px;
  max-width: 300px;
  background: var(--white);
  padding: 2rem;
  border-radius: 16px;
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  border: 1px solid var(--gray-200);
}

.feature-card:hover {
  transform: translateY(-10px);
  box-shadow: var(--shadow-lg);
}

.section-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 3rem;
  background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Testimonial Section */
.testimonial-section {
  background: linear-gradient(135deg, #f6f9fc 0%, #e9f2f9 100%);
  padding: 5rem 0;
  position: relative;
  overflow: hidden;
}

.testimonial-card {
  background: var(--white);
  border-radius: var(--border-radius);
  padding: 3rem;
  box-shadow: var(--shadow-md);
  max-width: 800px;
  margin: 0 auto;
  min-height: 300px;
}

.testimonial-content {
  text-align: center;
}

.testimonial-icon {
  width: 80px;
  height: 80px;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1.5rem;
}

.testimonial-icon svg {
  font-size: 2rem;
  color: var(--white);
}

.testimonial-text h3 {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.testimonial-title {
  color: var(--text-secondary);
  margin-bottom: 1rem;
}

.testimonial-rating {
  margin: 1rem 0;
}

.star-icon {
  color: #ffd700;
  margin: 0 0.2rem;
  font-size: 1.2rem;
}

.testimonial-navigation {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 2rem;
}

.nav-button {
  background: var(--white);
  border: none;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.nav-button:hover:not(:disabled) {
  background: var(--primary-color);
  color: var(--white);
  transform: scale(1.1);
}

.nav-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* FAQ Section */
.faq-section {
  padding: 5rem 0;
  background: var(--white);
}

.faq-grid {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 1rem;
}

.faq-item {
  margin-bottom: 1rem;
  border-bottom: 1px solid var(--gray-200);
}

.faq-question {
  width: 100%;
  text-align: left;
  padding: 1.5rem 0;
  background: none;
  border: none;
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.faq-question:hover {
  color: var(--primary-color);
}

.faq-answer {
  padding: 0 0 1.5rem;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* CTA Section */
.cta-section-new {
  background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
  padding: 5rem 0;
  color: var(--white);
  text-align: center;
}

.cta-wrapper {
  max-width: 700px;
  margin: 0 auto;
  padding: 0 1rem;
}

.cta-heading {
  font-size: 2.5rem;
  margin-bottom: 1.5rem;
}

.cta-description {
  font-size: 1.2rem;
  margin-bottom: 2rem;
  opacity: 0.9;
}

.cta-button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.cta-button-new {
  background: var(--white);
  color: var(--primary-color);
  border: none;
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  border-radius: 50px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  min-width: 200px;
}

.cta-button-new:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.cta-note {
  font-size: 0.9rem;
  opacity: 0.9;
  margin-top: 0.5rem;
}

/* Trust Section */
.trust-section {
  padding: 5rem 0;
  background: var(--gray-50);
}

.trust-metrics {
  display: flex;
  justify-content: center;
  gap: 2rem;
  flex-wrap: nowrap;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.metric-item {
  flex: 1;
  text-align: center;
  padding: 2rem;
  background: var(--white);
  border-radius: 16px;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  min-width: 200px;
  max-width: 280px;
}

.metric-item:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-md);
}

.metric-icon {
  font-size: 2.5rem;
  color: var(--primary-color);
  margin-bottom: 1rem;
}

.metric-number {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--primary-color);
  display: block;
  margin: 0.5rem 0;
}

.metric-label {
  font-size: 1.1rem;
  color: var(--text-secondary);
}

/* Text Utilities */
.text-center {
  text-align: center;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive Design */
@media (max-width: 1200px) {
  .hero-container {
    flex-direction: column;
    text-align: center;
    gap: 2rem;
  }

  .hero-content {
    max-width: 100%;
  }

  .feature-grid-new {
    flex-wrap: wrap;
  }

  .feature-card {
    flex: 1 1 calc(50% - 2rem);
    max-width: none;
  }

  .trust-metrics {
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .metric-item {
    flex: 1 1 calc(50% - 1.5rem);
    max-width: none;
  }

  .heading {
    font-size: 3rem;
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding: 2rem 0;
  }

  .heading {
    font-size: 2.5rem;
  }

  .sub-heading {
    font-size: 1.1rem;
  }

  .hero-grid {
    grid-template-columns: 1fr;
  }

  .feature-card {
    flex: 1 1 100%;
  }

  .metric-item {
    flex: 1 1 100%;
    min-width: auto;
  }

  .testimonial-card {
    padding: 2rem 1rem;
  }

  .section-title {
    font-size: 2rem;
  }

  .cta-heading {
    font-size: 2rem;
  }

  .cta-button-new {
    width: 100%;
    max-width: 300px;
  }
}

@media (max-width: 480px) {
  .heading {
    font-size: 2rem;
  }

  .hero-container {
    padding: 0 1rem;
  }

  .benefit-item {
    font-size: 1rem;
  }

  .section-title {
    font-size: 1.75rem;
  }
}

/* Print Styles */
@media print {
  .hero-section {
    background: none;
    color: black;
    min-height: auto;
    padding: 2rem 0;
  }

  .grid-box {
    background: none;
    border: 1px solid #000;
  }

  .grid-icon-wrapper {
    background: none;
  }

  .grid-icon {
    color: #000;
  }

  .cta-section-new,
  .testimonial-navigation,
  .nav-button {
    display: none;
  }

  .feature-card,
  .testimonial-card,
  .metric-item {
    box-shadow: none;
    border: 1px solid #000;
  }

  .metric-icon,
  .metric-number {
    color: #000;
  }

  .section-title {
    color: #000;
    -webkit-text-fill-color: initial;
  }

  .feature-icon {
    color: #000;
    -webkit-text-fill-color: initial;
  }

  .testimonial-icon {
    background: none;
    border: 1px solid #000;
  }

  .testimonial-icon svg {
    color: #000;
  }

  .star-icon {
    color: #000;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }

  .hero-section {
    background: var(--primary-color);
  }
}

/* Focus Styles */
button:focus-visible,
a:focus-visible {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

/* Screen Reader Only */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Smooth Scrolling */
html {
  scroll-behavior: smooth;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: var(--gray-100);
}

::-webkit-scrollbar-thumb {
  background: var(--primary-color);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary-hover);
}

/* Selection Color */
::selection {
  background: var(--primary-color);
  color: var(--white);
}

/* Performance Optimizations */
.hero-section,
.feature-card,
.testimonial-card,
.metric-item {
  will-change: transform;
  transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000px;
}

/* High Contrast Mode */
@media screen and (forced-colors: active) {
  .feature-card,
  .testimonial-card,
  .metric-item {
    border: 2px solid CanvasText;
  }

  .cta-button-new {
    border: 2px solid ButtonText;
  }
}