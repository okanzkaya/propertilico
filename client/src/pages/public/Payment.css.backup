.payment-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f0f2f5;
    padding: 20px;
  }
  
  .payment-box {
    background-color: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    text-align: center;
  }
  
  .header {
    font-size: 2.5em;
    margin-bottom: 10px;
    color: #007BFF;
  }
  
  .description {
    font-size: 1.1em;
    margin-bottom: 20px;
    color: #666;
  }
  
  .payment-input {
    width: 100%;
    padding: 12px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1em;
  }
  
  .payment-button {
    width: 100%;
    padding: 12px;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1.2em;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
  }
  
  .payment-button:hover {
    background-color: #0056b3;
    transform: scale(1.05);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .payment-box {
      padding: 20px;
    }
  
    .header {
      font-size: 2em;
    }
  
    .payment-input,
    .payment-button {
      padding: 10px;
    }
  }